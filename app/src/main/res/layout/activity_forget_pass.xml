<?xml version="1.0" encoding="utf-8"?>
<lib.homhomlib.design.SlidingLayout
    android:id="@+id/slidingLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ForgetPassActivit"
    app:background_view="@layout/reg_bg"
    app:sliding_mode="top"
    app:sliding_pointer_mode="more">

<LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp"
                android:layout_gravity="center"
                android:paddingBottom="10dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:paddingBottom="10dp">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:src="@mipmap/highquality_logo"
            android:paddingRight="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="旋风帮"
            android:layout_gravity="center"
            android:textSize="40sp"/>
    </LinearLayout>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/editText_forget_password_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:hint="@string/register_input_user_email"
        android:inputType="textEmailAddress"
        app:met_baseColor="@color/colorPrimary"
        app:met_primaryColor="#982360"
        app:met_floatingLabel="highlight"
        app:met_clearButton="true" />

    <Button
        android:id="@+id/button_find_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/forget_password_find_password_button"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"/>

</LinearLayout>

</lib.homhomlib.design.SlidingLayout>
